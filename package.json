{
  "name": "landmarker.app",
  "version": "0.1.1",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "electron": "electron .",
    "build:clean": "rm -rf ./build",
    "build:webpack": "webpack --config ./webpack/webpack.prod.config.js",
    "build:prod": "NODE_ENV=production npm run build:clean && npm run build:webpack:prod",
    "build": "npm run build:clean && npm run build:webpack",
    "watch:webpack": "webpack --config ./webpack/webpack.dev.config.js --progress --colors --watch",
    "watch": "npm run build:clean && npm run watch:webpack",
    "dist:clean": "rm -rf dist",
    "dist:clean-osx": "rm -rf dist/osx",
    "dist:clean-win": "rm -rf dist/win",
    "dist:clean-linux": "rm -rf dist/linux",
    "dist:osx": "npm run clean:osx && electron-packager . \"Landmarker\" --out=dist/osx --platform=darwin --arch=x64 --version=0.29.2 --icon=icon.icns --overwrite --asar --ignore=\"app/scss\" --ignore=LICENSE --ignore=\"app/js\" --ignore=app/client.js --ignore=landmarker.io --ignore=node_modules --ignore=\".git*\" --ignore=\"icon.ic*\" --ignore=readme.md --ignore=.editorconfig --ignore=.esformatter --ignore=.eslintrc --ignore=dist --ignore=.DS_Store",
    "dist:win": "npm run clean:win && electron-packager . \"Landmarker\" --out=dist/win --platform=win32 --arch=all --version=0.29.2 --icon=icon.ico --overwrite --asar --ignore=\"app/scss\" --ignore=LICENSE --ignore=\"app/js\" --ignore=app/client.js --ignore=landmarker.io --ignore=node_modules --ignore=\".git*\" --ignore=\"icon.ic*\" --ignore=readme.md --ignore=.editorconfig --ignore=.esformatter --ignore=.eslintrc --ignore=dist --ignore=.DS_Store",
    "dist:linux": "npm run clean:linux && electron-packager . \"Landmarker\" --out=dist/linux --platform=linux --arch=all --version=0.29.2 --icon=icon.ico --overwrite --asar --ignore=\"app/scss\" --ignore=LICENSE --ignore=\"app/js\" --ignore=app/client.js --ignore=landmarker.io --ignore=node_modules --ignore=\".git*\" --ignore=\"icon.ic*\" --ignore=readme.md --ignore=.editorconfig --ignore=.esformatter --ignore=.eslintrc --ignore=dist --ignore=.DS_Store",
    "submodule": "git submodule update --init --remote",
    "postinstall": "npm run submodule"
  },
  "author": "lirsacc <c.lirsac@gmail.com>",
  "license": "BSD",
  "dependencies": {
    "@types/backbone": "^1.3.33",
    "@types/es6-promise": "0.0.32",
    "@types/jquery": "^2.0.40",
    "@types/js-yaml": "^3.5.29",
    "@types/lodash": "^4.14.52",
    "@types/node": "^7.0.4",
    "@types/react": "^15.0.5",
    "@types/react-dom": "^0.14.22",
    "@types/three": "0.83.1",
    "appcache-webpack-plugin": "^1.3.0",
    "autoprefixer": "^6.7.7",
    "backbone": "^1.1.2",
    "css-loader": "^0.26.1",
    "drag-drop": "^2.13.2",
    "es6-promise": "^4.0.5",
    "file-loader": "^0.11.0",
    "jquery": "^3.1.1",
    "js-yaml": "^3.3.1",
    "json-loader": "^0.5.4",
    "lodash.assign": "^4.2.0",
    "node-sass": "^4.1.1",
    "postcss-loader": "^1.2.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "resolve-url-loader": "^1.6.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "three": "^0.84.0",
    "ts-loader": "^1.3.3",
    "tslint": "^4.2.2",
    "typescript": "^2.1.5",
    "typescript-collections": "^1.2.3",
    "underscore": "^1.8.3",
    "url-loader": "^0.5.8",
    "webpack": "^1.14.0"
  },
  "devDependencies": {
    "asar": "^0.7.2",
    "babel-eslint": "^3.1.23",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "electron": "^1.6.2",
    "electron-debug": "^0.1.1",
    "electron-packager": "^8.6.0",
    "eslint": "^1.0.0-rc-1",
    "node-sass": "^3.2.0",
    "watchify": "^3.3.1"
  }
}
